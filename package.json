{
  "name": "ToyGL",
  "version": "1.0.0",
  "description": "A toy-level WebGL library.",
  "main": "dist/toygl.js",
  "typings": "dist/toygl.d.ts",
  "module": "dist/toygl.esm.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "rollup --config rollup.config.js --watch",
    "build": "rm -rf dist && rollup --config rollup.config.js",
    "generateDocumentation": "npm run build && api-extractor run --local --verbose --typescript-compiler-folder node_modules/typescript && rm -rf docs/markdown && api-documenter markdown --input-folder temp --output-folder docs/markdown",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bbbbx/toy.gl"
  },
  "bugs": {
    "url": "https://github.com/bbbbx/toy.gl/issues"
  },
  "homepage": "https://bbbbx.github.io/toy.gl",
  "keywords": [
    "WebGL",
    "toygl"
  ],
  "author": "Venus <venus@venusworld.cn>",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.21.5",
    "@microsoft/api-extractor": "^7.34.4",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/urijs": "^1.19.19",
    "rollup": "^2.47.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "tslib": "^2.3.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "hdr.js": "^0.2.0",
    "urijs": "^1.19.11"
  }
}
